<div class="page-header">
  <h1><%= @page_title %></h1>
  <p>Posts by author: <strong><%= @author_name %></strong></p>
</div>

<section class="posts-listing">
  <% if @posts.any? %>
    <div class="posts-grid">
      <% @posts.each do |post| %>
        <%= render "shared/post_card", post: post %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No posts found by this author.</p>
      <%= link_to "Back to Home", root_path, data: { turbo: true } %>
      <%= link_to "All Posts", posts_path, data: { turbo: true } %>
    </div>
  <% end %>
</section>
