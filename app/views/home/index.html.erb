<!-- Magazine Section: 최신 7개 포스트 (1개 center + 6개 side) -->
<section class="gh-header is-magazine has-image gh-outer">
  <div class="gh-header-inner gh-inner">
    <!-- Center post (가장 최신) -->
    <% if @center_post %>
      <%= render "shared/post_card", post: @center_post, position: 'center' %>
    <% end %>
    
    <!-- Left side posts (2~4번째 포스트) -->
    <% if @left_posts.present? %>
      <div class="gh-header-left">
        <% @left_posts.each do |post| %>
          <%= render "shared/post_card", post: post, position: 'side' %>
        <% end %>
      </div>
    <% end %>
    
    <!-- Right side posts (5~7번째 포스트) -->
    <% if @right_posts.present? %>
      <div class="gh-header-right">
        <% @right_posts.each do |post| %>
          <%= render "shared/post_card", post: post, position: 'side' %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<!-- Featured Section: featured가 true인 포스트들 -->
<% if @featured_posts.present? %>
  <section class="gh-featured gh-outer">
    <div class="gh-featured-inner gh-inner">
      <h2 class="gh-featured-title">Featured Posts</h2>
      <div class="gh-featured-feed">
        <% @featured_posts.each do |post| %>
          <%= render "shared/post_card", post: post %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Latest Section: 최신 3개 포스트 -->
<% if @latest_posts.present? %>
  <section class="gh-container is-grid gh-outer">
    <div class="gh-container-inner gh-inner">
      <h2 class="gh-container-title">Latest Posts</h2>
      <main class="gh-main">
        <div class="gh-feed">
          <% @latest_posts.each do |post| %>
            <%= render "shared/post_card", post: post, position: 'latest' %>
          <% end %>
        </div>
      </main>
      <% if @show_see_all %>
        <div class="gh-more is-title">
          <a href="<%= posts_path %>">See all
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256">
              <path d="M224.49,136.49l-72,72a12,12,0,0,1-17-17L187,140H40a12,12,0,0,1,0-24H187L135.51,64.48a12,12,0,0,1,17-17l72,72A12,12,0,0,1,224.49,136.49Z"></path>
            </svg>
          </a>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
