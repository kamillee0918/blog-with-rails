<header id="gh-navigation" class="gh-navigation is-left-logo gh-outer is-dropdown-loaded">
  <div class="gh-navigation-inner gh-inner">
    <div class="gh-navigation-brand">
      <%= link_to "Kamil Lee의 개발 일기", root_path, class: "gh-navigation-logo is-title" %>
      <!-- 검색 버튼(모바일 페이지 한정 표시) -->
      <%= button_tag class: "gh-search gh-icon-button",
                     type: "button",
                     data: { action: "click->global#openSearch" },
                     aria_label: "Search" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      <% end %>
      <!-- 햄버거 버튼(모바일 페이지 한정 표시) -->
      <%= button_tag class: "gh-burger gh-icon-button",
                     type: "button",
                     data: { action: "click->global#toggleMenu" },
                     aria_label: "Toggle menu" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
          <path d="M224,128a8,8,0,0,1-8,8H40a8,8,0,0,1,0-16H216A8,8,0,0,1,224,128ZM40,72H216a8,8,0,0,0,0-16H40a8,8,0,0,0,0,16ZM216,184H40a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16Z"></path>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
          <path d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"></path>
        </svg>
      <% end %>
    </div>
    <nav class="gh-navigation-menu">
      <ul class="nav">
        <li class="nav-about-me">
          <%= link_to "About Me", "#" %>
        </li>
        <li class="nav-project">
          <%= link_to "Project", "#" %>
        </li>
      </ul>
    </nav>
    <div class="gh-navigation-actions">
      <!-- 검색 버튼(데스크톱) -->
      <%= button_tag class: "gh-search gh-icon-button",
                     type: "button",
                     data: { action: "click->global#openSearch" },
                     aria_label: "Search" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      <% end %>
      <!-- 로그인/회원가입 버튼(데스크톱/모바일) -->
      <% if Current.user&.verified? %>
        <div class="gh-navigation-members">
          <%= link_to "Account",
                      "#/account",
                      class: "gh-button gh-portal-close",
                      data: { action: "click->global#openAccount" } %>
        </div>
      <% else %>
        <div class="gh-navigation-members">
          <%= link_to "Sign in",
                      "#/signin",
                      class: "gh-portal-close",
                      data: { action: "click->global#openSignin" } %>
          <%= link_to "Subscribe",
                      "#/signup",
                      class: "gh-button gh-portal-close",
                      data: { action: "click->global#openSignup" } %>
        </div>
      <% end %>
    </div>
  </div>
</header>
